<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="grpstudy.grpware.register.mapper.RegisterMapper">

    <select id="registerMemberIdCheck" parameterType="String" resultType="int" >
        select count(*)
        from  tb_member
        where member_id = #{memberId}
    </select>
    
    <insert id="registerMember" parameterType="memberVO">
        insert into tb_member(
            member_id
            ,member_pw
            ,member_nm
            ,member_mail
            ,member_phone
            ,member_birth
        ) values (
            #{memberId}
            ,#{memberPw}
            ,#{memberNm}
            ,#{memberMail}
            ,#{memberPhone}
            ,date_format(#{memberBirth}, '%Y-%m-%d')
        )
    </insert>
    
    <insert id="registerMemberAuth" parameterType="memberVO">
        insert into tb_auth (
            auth_id
            ,auth_auth
        ) values (
            #{memberId}
            ,'ROLE_USER'
        )
    </insert>

</mapper>
